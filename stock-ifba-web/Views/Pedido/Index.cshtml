@model stock_ifba_web.Models.ViewModels.ConsultarPedidoViewModel

@{
    ViewData["Title"] = "Pedidos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Cadastrar" class="btn btn-default">Cadastrar</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                Data de Criação
            </th>
            <th>
                Descrição
            </th>
            <th>
                Cód. do Vendedor
            </th>
            <th>
                Cód. do Cliente
            </th>
            <th>
                Valor
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.creationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sellerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stateId)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.id">Editar</a> |
                    <a asp-action="Detalhar" asp-route-id="@item.id">Detalhar</a> |
                    <a asp-action="Deletar" asp-route-id="@item.id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
