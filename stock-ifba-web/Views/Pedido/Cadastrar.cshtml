@model stock_ifba_web.Models.ViewModels.SolicitarPedidoViewModel

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>@ViewData["Title"]</h2>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div class="form-group">
                <label asp-for="pedidoDto.Description" class="control-label"></label>
                <input asp-for="pedidoDto.Description" class="form-control" />
                <span asp-validation-for="pedidoDto.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pedidoDto.Amount" class="control-label"></label>
                <input asp-for="pedidoDto.Amount" class="form-control" />
                <span asp-validation-for="pedidoDto.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pedidoDto.SellerId" class="control-label"></label>
                <input asp-for="pedidoDto.SellerId" class="form-control" />
                <span asp-validation-for="pedidoDto.SellerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pedidoDto.ClientId" class="control-label"></label>
                <input asp-for="pedidoDto.ClientId" class="form-control" />
                <span asp-validation-for="pedidoDto.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}